# ======================================
# ПРИЛОЖЕНИЕ
# ======================================
DEBUG=false
LOG_LEVEL=INFO
ALLOWED_ORIGINS=["*"]
ALLOWED_CALLBACK_IPS=["*"]
VERIFY_SSL=false

# ======================================
# БД MySQL (УДАЛЁННАЯ)
# ======================================
DB_HOST=your_remote_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# ======================================
# СБЕРБАНК API
# ======================================
TEST_MODE=true
SBERBANK_USERNAME=your_sberbank_username
SBERBANK_PASSWORD=your_sberbank_password
SBERBANK_RETURN_URL=https://your-domain.com/return
SBERBANK_FAIL_RETURN_URL=https://your-domain.com/fail
SBERBANK_QR_TIMEOUT=1440

# ======================================
# АТОЛ ФИСКАЛИЗАЦИЯ (ЧЕКИ)
# ======================================
ATOL_PAYMENT_ID=SBP2
ATOL_LOGIN=your_atol_login
ATOL_PASSWORD=your_atol_password
ATOL_URL=https://atol.starlink.ru/api/v1/atol/register

# ======================================
# CALLBACK БЕЗОПАСНОСТЬ
# ======================================
CALLBACK_SECRET=your_callback_secret_min_32_chars
